<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%date{ISO8601} %level %mdc [%thread] %logger{1} : %message%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="trace">
			<AppenderRef ref="CONSOLE" />
		</Root>
	</Loggers>
</Configuration>